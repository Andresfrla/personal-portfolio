---
import Layout from '../layouts/Layout.astro';
import Badge from "../components/Badge.astro"
import LinkedinIcon from "../components/icons/Linkedin.astro"
import GithubIcon from '../components/icons/Github.astro';
import GmailIcon from '../components/icons/Gmail.astro'
import SocialPill from "../components/SocialPill.astro"
---

<Layout
title="Portfolio -Andres Franco L- Programmer and Web Developer"
description="Hire a good programmer for your web or your mobile App">
	<main>
		<section class="w-full mx-auto lg:w-[740px] py-44">
			<div class="flex justify-center">
			<img class="rounded-full size-60 mb-7"
   			src="https://i.ibb.co/xgbs4mz/andres.jpg"
    		alt="Andres photo">
			</div>
			<h1 class="text-white text-5xl font-bold flex justify-start flex-row gap-x-4 pb-10">
			Hi I'm Andres <div class="flex justify-center items-center">
			<a
			href="https://www.linkedin.com/in/andresfrancolangthon/"
			target="_blank"
			rel="noopener"
			class="flex justify-center items-center"
			>
				<Badge> Available for hire</Badge></a></div></h1>
			<h2 class="text-2xl opacity-80 text-wrap justifify-content">+7 years of Professional experience. <span class="text-yellow-200/90">Web Developer and business Administrator.</span>
			From Bogota Colombia living in Mexico City. I recently complete the Professional Certification of Meta.
			</h2>

			<nav class="flex gap-x-4 mt-8">
					<SocialPill href="https://www.linkedin.com/in/andresfrancolangthon/">
						<LinkedinIcon class="size-6"/>LinkedIn </svg>
					</SocialPill>
					<SocialPill href="https://github.com/Andresfrla">
						<GithubIcon class="size-6"/>Github </svg>
					</SocialPill>
					<SocialPill href="https://github.com/Andresfrla">
						<GmailIcon class="size-6"/>andresfranla@gmail.com </svg>
					</SocialPill>
			</nav>
		</section>
	</main>
</Layout>

